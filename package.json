{
  "name": "typescript-lit-html-plugin",
  "version": "0.6.0",
  "description": "TypeScript language service plugin that adds IntelliSense for html tagged templates",
  "keywords": [
    "TypeScript",
    "html",
    "literal html",
    "templates"
  ],
  "main": "lib/index.js",
  "author": "Microsoft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/typescript-lit-html-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/typescript-lit-html-plugin/issues"
  },
  "dependencies": {
    "typescript-styled-plugin": "^0.9.2",
    "typescript-template-language-service-decorator": "^2.0.0",
    "vscode-html-languageservice": "^2.1.3-next.5",
    "vscode-languageserver-types": "^3.8.2"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/node": "^7.0.22",
    "chai": "^4.1.2",
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "compile": "./node_modules/.bin/tsc -p .",
    "watch:compile": "./node_modules/.bin/tsc --watch -p .",
    "e2e": "./node_modules/.bin/mocha e2e/tests --slow 2000 --timeout 10000",
    "lint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json"
  }
}
